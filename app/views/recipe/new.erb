<h2>Share your recipe with us!</h2>
<div id="new-recipe">
  <div id="title-form">
    <form action="/recipe/new" method="post">
      <input type="text" placeholder="Title" name="title" /><br>
      <label>Instructions:<br>
      <textarea cols="100" rows="10" class="form-control" name="instruction"></textarea></label><br>
      <input type="submit" value="Create" />
    </form>
  </div>

  <div id="ingredient-form">
    <a id="finished" href='/user/<%=current_user.id%>'>Finished</a>
  </div>

</div>



